<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <corners
                android:radius="10dp"/>
            <solid

                android:color="@color/colorAccent"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
           />
            <gradient
                android:endColor="#0ff000"
                android:startColor="#000000"
                android:centerX="0.5"
                android:centerY="0.5"
                />

        </shape>


    </item>
    <item>

        <shape android:shape="rectangle">

            <corners
                android:radius="10dp"/>

            <solid

                android:color="@color/colorAccent"
                />
            <padding
                android:left="10dp"
                android:top="10dp"
                />
            <gradient
                android:endColor="#ff0000"
                android:startColor="#000000"

                />

        </shape>

    </item>







</selector>